{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist",
    "lib": [
      "ES2021.String"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    ".eslintrc.js",
    "webpack.config.js",
    "test/**/*.ts",
  ]
}